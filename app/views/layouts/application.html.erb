<!DOCTYPE html>
<html>
  <head>
    <title>Rbnb</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>

  <body>
    <% if notice %>
      <div class="alert alert-info alert-dismissible fade show m-1" role="alert">
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        <%= notice %>
      </div>
    <% end %>
    <% if alert %>
      <div class="alert alert-warning alert-dismissible fade show m-1" role="alert">
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        <%= alert %>
      </div>
    <% end %>

  <%# NAVBAR %>
    <div class="navbar navbar-expand-sm navbar-light navbar-dino">
      <div class="container-fluid">
        <%= link_to "/", class: "navbar-brand" do %>
          <h1><b><%= image_tag "https://res.cloudinary.com/df6z4mw2e/image/upload/v1653472873/development/Dinosaur-Emblem-Stegosaurus-Graphics-3665951-1-1-580x386_j9lown.jpg", class: "logo align-text-middle" %><span style="color:#000000">Dino BnB</b></span></h1>
        <% end %>

          <%# Research BAR %>
        <%= form_tag dinos_path, method: :get, class: "d-flex justify-content-center " do %>
          <div class="d-flex justify-content-center">
            <div class = "barre">
              <%= text_field_tag :query,
                params[:query],
                class: "form-control",
                placeholder: "Trouvez votre dino"
              %>
            </div>
              <%= submit_tag "Rechercher", class: "btn-search btn btn-primary" %>
          </div>
        <% end %>


        <%# LOGIN %>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto">
              <% if user_signed_in? %>
                <li class="nav-item active">
                  <%= link_to "Home", dashboard_path, class: "nav-link" %>

                </li>
                <li class="nav-item dropdown">
                  <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
                  <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    <%= link_to "Mon dashboard", dashboard_path, class: "dropdown-item" %>
                    <%= link_to "CrÃ©er un dino", new_owner_dino_path, class: "dropdown-item" %>
                    <%= link_to "Mes dinos", owner_dinos_path, class: "dropdown-item" %>
                    <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>

                  </div>
                </li>
              <% else %>
                <!--li class="nav-item"-->
                  <%= link_to "Login", new_user_session_path, class: "nav-link" %>
                <!--/li-->
              <% end %>
            </ul>
          </div>
      </div>
    </div>
    <div class="min-h-screen">
      <%= yield %>
    </div>

  <%# FOOTER %>
  <%# <div class="wrapper">
    <div class="push"></div>
  </div> %>
    <footer>
      <div class="footer">
        <div class="footer-links">
          <a href="#"><i class="fab fa-github"></i></a>
          <a href="#"><i class="fab fa-instagram"></i></a>
          <a href="#"><i class="fab fa-facebook"></i></a>
          <a href="#"><i class="fab fa-twitter"></i></a>
          <a href="#"><i class="fab fa-linkedin"></i></a>
        </div>
        <div class="footer-copyright">
          Made with <i class="fas fa-heart"></i> by team Heroes
        </div>
      </div>
    </footer>
  </body>
</html>
