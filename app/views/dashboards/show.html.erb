<div class="title-dashboard">
  <h1>Mon Dashboard</h1>
</div>

<div class="d-flex">

  <div class="w-50  bg-primary p-3 col-12 col-lg-6">
  <h2> Mes réservations en cours </h2>
  <% @bookings.each do |booking| %>
  <div class="mb-3 p-3 rounded d-flex">
    <div class="w-35">
      <%= cl_image_tag booking.dino.photo.key, height: 200, width: 200 %>
    </div>
    <div class="p-10 w-65", style="height: 248px";>
      <ul>
        <h5><%= "Status de votre réservation" %></h5>
        <p><%= booking.status %></p>
        <h5><%="Nom du propriétaire"%></h5>
        <p><%= booking.dino.user.first_name %></p>
        <h5><%="Nom du dino"%></h5>
        <p><%= booking.dino.name %></p>
        <h5><%="Lieu de vie du dino"%></h5>
        <p><%= booking.dino.place %></p>
      </ul>
    </div>
  </div>

  <% end %>
  </div>

  <div class="w-50  bg-secondary p-3 col-12 col-lg-6">
  <h2> Mes réservations en cours </h2>
  <% @my_bookings.each do |booking| %>
    <ul>
        <h5><%= "Décision de la réservation" %></h5>
         <p><%= booking.status %></p>
        <h5><%= "Nom du locataire" %></h5>
        <p><%= booking.user.first_name %></p>
        <%= link_to "Voir le détail de la réservation", root_path %>
          <div class="d-flex" >
          <%= link_to "Accepter", approve_owner_booking_path(booking), method: :patch, class: "btn-green" %>
          <br>
          <%= link_to "Refuser", reject_owner_booking_path(booking), method: :patch, class: "btn-green" %>
          </div>
    </ul>
    <br>

  <% end %>
  </div>
</div>
