
<div class="container dashboard d-flex">
  <div class="resa w-50 p-3 col-12 col-lg-6">
    <h1><b> MES RESERVATIONS</b></h1>
      <% @bookings.each do |booking| %>
        <div class="mt-3 bg-primary mb-3 p-3 rounded d-flex">
          <div class="photo-dash h-40 w-35 d-flex ">
            <%= cl_image_tag booking.dino.photo.key, height: 200, width: 200, class: "my-auto shadow-lg" %>
          </div>

          <div class="d-flex">
            <div class="resa-dino p-10 w-65", style="height: 270px; width: 450px";>
              <ul>
                <h5><%= "Status de votre réservation" %></h5>
                <p><%= booking.french_status %></p>
                <h5><%="Nom du propriétaire"%></h5>
                <p><%= booking.dino.user.first_name %></p>
                <h5><%="Nom du dino"%></h5>
                <p><%= booking.dino.name %></p>
                <h5><%="Lieu de vie du dino"%></h5>
                <p><%= booking.dino.place %></p>
              </ul>
            </div>
          </div>
        </div>
      <% end %>
  </div>

  <div class="resa w-50 p-3 col-12 col-lg-6">
    <h1><b> MES DINOS EN LOCATION</b></h1>
    <% @my_bookings.each do |booking| %>
      <div style="height: 310px", class="resa-dino bg-secondary mb-3 p-3 rounded d-flex w-65">
        <ul class="w-100 ps-0">
          <h5><%= "Décision de la réservation" %></h5>
          <p><%= booking.french_status %></p>
          <h5><%= "Infos" %></h5>
          <p><%= "Le locataire #{booking.user.first_name} pour le dino #{booking.dino.name}" %></p>
          <h5><%= "Dates de réservation" %></h5>
          <p><%= "Du #{booking.checkin_on} au #{booking.checkout_on}" %></p>
          <%= link_to "Voir le détail de la réservation", root_path %>
          <% if booking.status == "pending"%>
            <div class="d-flex">
              <%= link_to "Accepter", approve_owner_booking_path(booking), method: :patch, class: "btn-green w-50 me-2" %>
              <br>
              <%= link_to "Refuser", reject_owner_booking_path(booking), method: :patch, class: "btn-green w-50 ms-2" %>
            </div>
          <% else booking.french_status %>
          <% end %>
        </ul>
        <br>
      </div>

    <% end %>
  </div>
</div>
