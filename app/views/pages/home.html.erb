              <% end %>


                <div class="card-body d-flex flex-column justify-content-between">

                  <div class="d-flex flex-column justify-content-between">
                      <div class="bar">
                        <h5><%= dino.specie %></h5>
                        <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-owner avatar-bordered" />
                      </div>
                      <p class="fst-italic"> <%= dino.place %></p>
                  </div>

                  <div class="description d-flex justify-content-between">
                    <h6><%= dino.characteristic %></h6>
                    <h2 class="card-pricing d-flex align-items-center"><%= dino.price%>€</h2>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <%# <div class="btn-homepage">
      <%= link_to "Voir plus de dinos", dinos_path, class: "btn-green" %>
    <%# </div>
  </div> %>


</div>
